// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model QRCode {
  id               Int      @id @default(autoincrement())
  title            String
  shop             String
  productId        String
  productHandle    String
  productVariantId String
  destination      String
  scans            Int      @default(0)
  createdAt        DateTime @default(now())
}

model NFTCollection {
  id                      Int       @id @default(autoincrement())
  name                    String
  shop                    String
  description             String?
  owner                   String
  canister_id             String?
  image                   String?
  symbol                  String
  tx_window               Int
  permitted_drift         Int
  royalties               Int?
  royalties_recipient     String?
  supply_cap              Int?
  status_memory_size      BigInt?
  status_heap_memory_size BigInt?
  status_cycles           BigInt?
  createdAt               DateTime  @default(now())
  updatedAt               DateTime?
  nft_infos               NFTInfo[]

  @@index([shop])
}

model AppSetting {
  id          Int       @id @default(autoincrement())
  info_key    String
  info_value  String
  description String?
  shop        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
}

model NFTInfo {
  id                 Int           @id @default(autoincrement())
  shop               String
  nft_collection     NFTCollection @relation(fields: [nft_collection_id], references: [id])
  nft_collection_id  Int
  token_id           BigInt
  name               String
  description        String?
  owner              String?
  subaccount         String?
  canister_id        String?
  image              String?
  image_data         String?
  local_image        String?
  shop_image         String?
  product_id         String?
  product_handle     String?
  product_variant_id String?
  nft_gift_id        Int?
  onchain            Boolean?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime?
  is_sale            Boolean?
  gift_is_used       Boolean?
  nft_gift           NFTGift?

  @@index([shop])
  @@index([shop, nft_collection_id])
}

model NFTGift {
  id          Int       @id @default(autoincrement())
  shop        String
  nft_info    NFTInfo   @relation(fields: [nft_info_id], references: [id])
  nft_info_id Int       @unique
  card_code   String
  expires_at  DateTime?
  used_at     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
}
