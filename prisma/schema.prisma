// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model QRCode {
  id               Int      @id @default(autoincrement())
  title            String
  shop             String
  productId        String
  productHandle    String
  productVariantId String
  destination      String
  scans            Int      @default(0)
  createdAt        DateTime @default(now())
}

model NFTCollection {
  id                      Int       @id @default(autoincrement())
  name                    String
  shop                    String
  description             String?
  owner                   String
  canister_id             String?
  image                   String?
  symbol                  String
  tx_window               Int
  permitted_drift         Int
  royalties               Int?
  royalties_recipient     String?
  supply_cap              Int?
  status_memory_size      BigInt?
  status_heap_memory_size BigInt?
  status_cycles           BigInt?
  createdAt               DateTime  @default(now())
  updatedAt               DateTime?
}

model Settings {
  id          Int       @id @default(autoincrement())
  info_key    String
  info_value  String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
}
